Table employees {
  id int [pk, increment]
  name varchar
  last_name varchar
  pfp varchar
  title varchar
  resume text
  email varchar
  socials_linkedin varchar
  socials_facebook varchar
}

Table social_media {
    id int [pk, increment]
    media_platform varchar
    media_link varchar
    media_icon varchar
}

Table courses {
  id int [pk, increment]
  name varchar
  icon varchar
  description text
}

Table tags {
  id int [pk, increment]
  tag varchar
}

Table blog_posts {
  id int [pk, increment]
  title varchar
  date_posted date
  cover_image varchar
  author_id int [ref: > employees.id]
  blog text
}

Table blogpost_tags {
  blogpost_id int [ref: > blog_posts.id]
  tag_id int [ref: > tags.id]
  Note: 'Composite primary keys are not fully supported in DBML. Handle in SQL if needed.'
}
